{
    "compilerOptions": {
        "baseUrl": "../src",
        "rootDir": "../src",
        "target": "ES6",
        "lib": [
            "ES6",
            "DOM",
            "DOM.Iterable"
        ],
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "emitDeclarationOnly": false,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": true,
    },
    "include": [
        "../src/**/*.mts",
        "../src/**/*.mtsx"
    ]
}